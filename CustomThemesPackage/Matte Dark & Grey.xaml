<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:BelowWindows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                    <!-- Background Resources -->
                    <Color x:Key="SolidBackground">#181818</Color>
                    <Color x:Key="SolidBackgroundFillColorBase">#0f0f0f</Color>
                    <Color x:Key="SolidBackgroundFillColorSecondary">#0f0f0f</Color>
                    <Color x:Key="SolidBackgroundFillColorTertiary">#131313</Color>
                    <Color x:Key="SolidBackgroundFillColorQuarternary">#0f0f0f</Color>
                    <Color x:Key="ControlStrokeColorDefault">#2c2c2c</Color>
                    <Color x:Key="ControlStrokeColorSecondary">#2a2a2a</Color>

                    <SolidColorBrush x:Key="SolidBackgroundFillColorBaseBrush" Color="{ThemeResource SolidBackgroundFillColorBase}" />
                    <SolidColorBrush x:Key="SolidBackgroundFillColorSecondaryBrush" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />
                    <SolidColorBrush x:Key="SolidBackgroundFillColorTertiaryBrush" Color="{ThemeResource SolidBackgroundFillColorTertiary}" />
                    <SolidColorBrush x:Key="SolidBackgroundFillColorQuarternaryBrush" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />
                    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#1f1f1f" />
                    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush" Color="#212121" />
                    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush" Color="#212121" />
                    <SolidColorBrush x:Key="ControlFillColorInputActiveBrush" Color="#212121" />
                    <SolidColorBrush x:Key="PreviewPaneBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorTertiary}" />

                    <!--  Sidebar  -->
                    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{ThemeResource SolidBackgroundFillColorBase}" />
                    <SolidColorBrush x:Key="SidebarContentBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorBase}" />

                    <!-- Tabs / Titlebar -->
                    <SolidColorBrush x:Key="TitlebarContentBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorBase}" />
                    <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="{ThemeResource SolidBackground}" />
                    <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPressed" Color="{ThemeResource SolidBackgroundFillColorTertiary}" />
                    <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPointerOver" Color="{ThemeResource SolidBackground}" />

                    <!-- Strokes -->
                    <Color x:Key="ControlStrokeColorDefault">#141414</Color>
                    <Color x:Key="ControlStrokeColorSecondary">#141414</Color>

                    <!-- Widget Buttons -->
                    <SolidColorBrush x:Key="ButtonBackground" Color="{ThemeResource SolidBackground}" />
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource SolidBackgroundFillColorTertiary}" />
                    <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="{ThemeResource SolidBackground}" />

                    <!-- Accent Color -->
                    <Color x:Key="SystemAccentColor">#EEE</Color>
                    <Color x:Key="SystemAccentColorLight2">#FFF</Color>

                    <!-- Corner Roundness -->
                    <CornerRadius x:Key="ControlCornerRadius">1</CornerRadius>
                    <CornerRadius x:Key="OverlayCornerRadius">1</CornerRadius>
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Light">

            <!-- Background Resources -->
            <Color x:Key="SolidBackgroundFillColorBase">#9B9B9B</Color>
            <Color x:Key="SolidBackgroundFillColorSecondary">#9F9F9F</Color>
            <Color x:Key="SolidBackgroundFillColorTertiary">#A7A7A7</Color>
            <Color x:Key="SolidBackgroundFillColorQuarternary">#BBBBBB</Color>
            <Color x:Key="PreviewPaneBackgroundBrush">#999</Color>
            
            <SolidColorBrush x:Key="SolidBackgroundFillColorQuarternaryBrush" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />

            <!--  Sidebar  -->
            <AcrylicBrush
                x:Key="SidebarContentBackgroundBrush"
                BackgroundSource="HostBackdrop"
                FallbackColor="{ThemeResource SolidBackgroundFillColorSecondary}"
                TintColor="{ThemeResource SolidBackgroundFillColorSecondary}"
                TintOpacity="0.95" />
                
            <!-- Navigation-->
            <SolidColorBrush x:Key="NavigationToolbarBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />

            <!-- Search Inputs-->
            <SolidColorBrush x:Key="TextControlBackground" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />

            <!-- Tabs / Titlebar -->
            <SolidColorBrush x:Key="TitlebarContentBackgroundBrush" Color="{ThemeResource SolidBackgroundFillColorSecondary}" />
            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />
            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPressed" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />
            <SolidColorBrush x:Key="TabViewItemHeaderBackgroundPointerOver" Color="{ThemeResource SolidBackgroundFillColorQuarternary}" />

            <!-- Widget Buttons -->
            <SolidColorBrush x:Key="ButtonBackground" Color="#B9B9B9" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#C8C8C8" />
            <SolidColorBrush x:Key="ControlFillColorDefaultBrush" Color="#B9B9B9" />

            <!-- Accent Color -->
            <Color x:Key="SystemAccentColor">#222</Color>
            <Color x:Key="SystemAccentColorLight2">#222</Color>
            <Color x:Key="SystemAccentColorDark1">#222</Color>

            <!-- Corner Roundness -->
            <CornerRadius x:Key="ControlCornerRadius">1</CornerRadius>
            <CornerRadius x:Key="OverlayCornerRadius">1</CornerRadius>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
